{
  "npm": true,
  "entrypoint": "app/index.html",
  "lint": {
    "rules": [
      "polymer-3"
    ]
  },
  "sources": [
    "app/elements/**.js",
    "app/style/**",
    "app/entrypoint/**",
    "app/config/**",
    "!app/config/config.json.dist",
    "app/main.js",
    "app/manifest.json",
    "package.json"
  ],
  "builds": [
    {
      "name": "es6bundle",
      "js": {
        "compile": "es2018",
        "minify": false,
        "transformModulesToAmd": true
      },
      "css": {
        "minify": false
      },
      "html": {
        "minify": false
      },
      "bundle": false
    }
  ],
  "moduleResolution": "node"
}